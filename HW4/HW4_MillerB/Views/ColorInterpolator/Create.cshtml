
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "ColorInterpolator", FormMethod.Get)) {
            <table>
                <tr>
                    <td>Enter first color: </td>
                    <td>@Html.TextBox("startColor")</td>
                </tr>
                <tr>
                    <td>Enter second color: </td>
                    <td>@Html.TextBox("endColor")</td>
                </tr>
                <tr>
                    <td>Enter number of transitions:</td>
                    <td>@Html.TextBox("interpolate", "2", new { type = "number", min="2"})</td>
                </tr>
            </table>

            <button type="submit" class=" btn btn-primary-lg">Display</button>

        }

    </div>

